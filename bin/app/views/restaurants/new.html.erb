
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
			<h1>Add a Restaurant</h1>
 		</div>
  </div>
 
 <div class="form-group">
		<%= form_for @restaurants do |f| %>
			<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control", :autofocus => true%> 

			<%= f.label :price %>
			<%= f.text_field :price, class: "form-control", :autofocus => true %> 

			<%= f.label :food %>
			<%= f.text_field :food, class: "form-control", :autofocus => true %> 

			<%= f.label :address %>
			<%= f.text_area :address, class: "form-control", :autofocus => true %> 

			<%= f.label :phone, 'Phone number' %>
			<%= f.telephone_field :phone, class: "form-control", :autofocus => true, :placeholder => "555-555-5555" %> 
			<%= f.submit 'Submit', class: "btn btn-primary btn-md" %>
			</div>
		<% end %>
	</div>
</div>
