<% if session[:user_id] %>
	<%= form_for [ @restaurant, @review ] do |f| %>
		<article>
			<%= f.label :rating %>
			<%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
		
		
			<%= f.label :recommendation, 'Recommend?' %>
			<%= f.check_box :recommendation %>
		
		
			<%= f.label :comment %>
			<%= f.text_area :comment %>
		
			<%= f.submit %>
		</article>
	<% end %>
<% else %>
<p>If you would like to add a review, <%= link_to 'log in here', login_path %></p>
<% end %>

